{
  "name": "mcansh",
  "description": "personal website for logan mcansh",
  "version": "2.1.0",
  "repository": "mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "start": "pm2-dev pm2.config.js",
    "dev": "remix dev",
    "clean": "del .cache app/styles api/_build public/build",
    "prebuild": "run-s clean type-check",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "type-check": "tsc",
    "lint": "eslint --cache --fix --ext \".js,.ts,.tsx,.jsx,.mts,.cts\" .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|cts|mts|md|graphql|mdx)\"",
    "validate": "run-p lint format type-check",
    "prepare": "husky install",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/node": "1.2.3",
    "@remix-run/react": "1.2.3",
    "@remix-run/server-runtime": "1.2.3",
    "@remix-run/vercel": "1.2.3",
    "clsx": "1.1.1",
    "fathom-client": "3.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.2.3",
    "type-fest": "2.12.0"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "4.0.0",
    "@remix-run/dev": "1.2.3",
    "@remix-run/serve": "1.2.3",
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.13",
    "@types/web": "0.0.53",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "autoprefixer": "10.4.2",
    "cssnano": "5.1.0",
    "del-cli": "4.0.1",
    "eslint": "8.10.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "npm-run-all": "4.1.5",
    "pm2": "5.2.0",
    "postcss": "8.4.7",
    "postcss-100vh-fix": "1.0.2",
    "postcss-cli": "9.1.0",
    "prettier": "2.5.1",
    "tailwindcss": "3.0.23",
    "tailwindcss-padding-safe": "1.0.5",
    "typescript": "4.6.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --fix"
    ]
  }
}
