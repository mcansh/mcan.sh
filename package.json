{
  "name": "mcansh",
  "description": "personal website for logan mcansh",
  "version": "2.1.0",
  "repository": "mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "start": "pm2-dev pm2.config.js",
    "dev": "remix dev",
    "clean": "del .cache app/styles api/_build public/build",
    "prebuild": "run-s clean type-check",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "type-check": "tsc",
    "lint": "eslint --cache --fix --ext \".js,.ts,.tsx,.jsx,.mts,.cts\" .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|cts|mts|md|graphql|mdx)\"",
    "validate": "run-p lint format type-check",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@mcansh/remix-secure-headers": "0.5.0",
    "@remix-run/node": "nightly",
    "@remix-run/react": "nightly",
    "@remix-run/vercel": "nightly",
    "clsx": "1.1.1",
    "fathom-client": "3.4.1",
    "isbot": "3.4.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "type-fest": "2.12.2"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "4.0.0",
    "@remix-run/dev": "nightly",
    "@remix-run/serve": "nightly",
    "@types/node": "17.0.31",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.3",
    "@types/web": "0.0.63",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "autoprefixer": "10.4.7",
    "cssnano": "5.1.7",
    "del-cli": "4.0.1",
    "eslint": "8.14.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "npm-run-all": "4.1.5",
    "pm2": "5.2.0",
    "postcss": "8.4.13",
    "postcss-100vh-fix": "1.0.2",
    "postcss-cli": "9.1.0",
    "prettier": "2.6.2",
    "tailwindcss": "3.0.24",
    "tailwindcss-padding-safe": "1.0.5",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --fix"
    ]
  }
}
