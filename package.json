  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@cld-apis/types": "^0.1.6",
    "@remix-run/dev": "2.7.2",
    "@types/react": "^18.2.60",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "del": "^7.1.0",
    "fs-extra": "^11.2.0",
    "gitignore-fs": "^2.2.2",
    "glob": "^10.3.10",
    "husky": "^9.0.11",
    "kleur": "^4.1.5",
    "lightningcss": "^1.24.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.35",
    "postcss-100vh-fix": "^1.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "svgstore": "^3.0.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-padding-safe": "^1.0.6",
    "typescript": "^5.3.3",
    "vite": "5.1.4",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "biome lint"
    ],
    "*": [
      "biome format"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
