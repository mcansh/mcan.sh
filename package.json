{
  "name": "mcansh",
  "description": "personal website for logan mcansh",
  "version": "2.1.0",
  "repository": "mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "main": "remix.config.js",
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "clean": "del .cache app/styles server/build public/build",
    "prebuild": "run-s clean type-check",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "start": "vercel dev",
    "type-check": "tsc",
    "lint": "eslint --cache --fix --ext \".js,.ts,.tsx\" .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "validate": "run-p lint format type-check",
    "prepare": "husky install",
    "postinstall": "remix setup"
  },
  "dependencies": {
    "@remix-run/node": "0.18.2",
    "@remix-run/react": "0.18.2",
    "@remix-run/vercel": "0.18.2",
    "fathom-client": "3.2.0",
    "react": "18.0.0-alpha-b1a1cb116-20210924",
    "react-dom": "18.0.0-alpha-b1a1cb116-20210924",
    "react-router": "6.0.0-beta.3",
    "react-router-dom": "6.0.0-beta.3",
    "remix": "0.18.2",
    "remix-utils": "1.0.2",
    "type-fest": "2.3.4"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.1.0",
    "@remix-run/dev": "0.18.2",
    "@types/node": "16.10.1",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@types/web": "0.0.37",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "autoprefixer": "10.3.6",
    "cssnano": "5.0.8",
    "del-cli": "4.0.1",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "pm2": "5.1.2",
    "postcss": "8.3.8",
    "postcss-100vh-fix": "1.0.2",
    "postcss-cli": "9.0.0",
    "prettier": "2.4.1",
    "tailwindcss": "2.2.16",
    "tailwindcss-padding-safe": "1.0.5",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
