{
  "private": true,
  "repository": "https://github.com/mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "del .cache app/styles/app.css api public/build",
    "dev": "npm run clean && run-p dev:*",
    "dev:css": "npm run css -- --watch",
    "dev:remix": "remix dev",
    "build": "run-s clean type-check && run-s build:*",
    "build:css": "npm run css -- --minify",
    "build:remix": "remix build",
    "css": "tailwindcss -o app/styles/app.css --postcss",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --fix --ext \".js,.ts,.tsx,.jsx,.mts,.cts\" .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|cts|mts|md|graphql|mdx)\"",
    "validate": "run-p lint format type-check",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@mcansh/remix-secure-headers": "0.6.2",
    "@mcansh/tailwind-var": "^0.1.0",
    "@remix-run/node": "1.10.0-pre.5",
    "@remix-run/react": "1.10.0-pre.5",
    "@remix-run/vercel": "1.10.0-pre.5",
    "@vercel/node": "2.8.2",
    "clsx": "1.2.1",
    "etag": "^1.8.1",
    "fathom-client": "3.5.0",
    "is-ci": "3.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "type-fest": "3.5.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.10.0-pre.5",
    "@remix-run/eslint-config": "1.10.0-pre.5",
    "@remix-run/serve": "1.10.0-pre.5",
    "@types/etag": "^1.8.1",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript/lib-dom": "npm:@types/web@0.0.79",
    "autoprefixer": "10.4.13",
    "del-cli": "5.0.0",
    "eslint": "8.31.0",
    "eslint-plugin-prefer-let": "3.0.1",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.20",
    "postcss-100vh-fix": "1.0.2",
    "prettier": "2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "3.2.4",
    "tailwindcss-padding-safe": "1.0.6",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --fix"
    ]
  }
}
