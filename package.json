{
  "name": "mcansh",
  "description": "personal website for logan mcansh",
  "version": "2.1.0",
  "repository": "mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "start": "pm2-dev pm2.config.js",
    "dev": "remix dev",
    "clean": "del .cache app/styles api/_build public/build",
    "prebuild": "run-s clean type-check",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "type-check": "tsc",
    "lint": "eslint --cache --fix --ext \".js,.ts,.tsx,.jsx,.mts,.cts\" .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|cts|mts|md|graphql|mdx)\"",
    "validate": "run-p lint format type-check",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@mcansh/remix-secure-headers": "0.6.2",
    "@remix-run/node": "1.7.3",
    "@remix-run/react": "1.7.3",
    "@remix-run/vercel": "1.7.3",
    "@vercel/node": "2.5.26",
    "clsx": "1.2.1",
    "fathom-client": "3.5.0",
    "is-ci": "3.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "type-fest": "3.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@remix-run/dev": "1.7.3",
    "@remix-run/eslint-config": "^1.7.2",
    "@remix-run/serve": "1.7.3",
    "@types/node": "18.11.3",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/web": "0.0.75",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "autoprefixer": "10.4.12",
    "cssnano": "5.1.13",
    "del-cli": "5.0.0",
    "eslint": "8.26.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pm2": "5.2.2",
    "postcss": "8.4.18",
    "postcss-100vh-fix": "1.0.2",
    "postcss-cli": "10.0.0",
    "prettier": "2.7.1",
    "tailwindcss": "3.2.1",
    "tailwindcss-padding-safe": "1.0.6",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --fix"
    ]
  }
}
