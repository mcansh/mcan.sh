  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build:icons": "node ./scripts/svg.js",
    "build": "npm run build:icons && npm run type-check && remix vite:build",
    "clean": "./scripts/clean.js",
    "typecheck": "tsc",
    "lint": "biome lint ./ --apply",
    "format": "biome format ./ --write",
    "check": "biome check ./ --apply",
    "validate": "run-p check typecheck",
    "prepare": "node ./scripts/prepare.js",
    "predev": "npm run build:icons",
    "dev": "NODE_ENV=development node --watch-path ./server.js ./server.js",
    "start": "NODE_ENV=production node ./server.js"
  },
  "dependencies": {
    "@fastify/middie": "^8.3.0",
    "@fastify/static": "^7.0.1",
    "@mcansh/http-helmet": "0.10.2",
