{
	"private": true,
	"repository": "https://github.com/mcansh/mcan.sh",
	"homepage": "https://mcan.sh",
	"author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
	"license": "MIT",
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "run-s type-check && remix build",
		"clean": "./scripts/clean.mjs",
		"dev": "remix dev -c \"bun run --hot ./server.ts\"",
		"type-check": "tsc",
		"lint": "eslint --ignore-path .gitignore --cache --fix .",
		"format": "prettier --ignore-path .gitignore --ignore-unknown --write .",
		"validate": "run-p lint format type-check",
		"prepare": "is-ci || husky install",
		"start": "cross-env NODE_ENV=production bun run ./server.ts"
	},
	"dependencies": {
		"@mcansh/remix-secure-headers": "^0.7.2",
		"@remix-run/node": "pre",
		"@remix-run/react": "pre",
		"@remix-run/server-runtime": "pre",
		"cloudinary-build-url": "^0.2.4",
		"clsx": "^2.0.0",
		"cross-env": "^7.0.3",
		"fathom-client": "^3.5.0",
		"is-ci": "^3.0.1",
		"isbot": "^3.6.13",
		"pretty-cache-header": "^1.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-utils": "next",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@cld-apis/types": "^0.1.6",
		"@remix-run/dev": "pre",
		"@remix-run/eslint-config": "pre",
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"@typescript/lib-dom": "npm:@types/web@^0.0.114",
		"autoprefixer": "^10.4.15",
		"bun-types": "latest",
		"del": "^7.1.0",
		"eslint": "^8.49.0",
		"eslint-plugin-prefer-let": "^3.0.1",
		"gitignore-fs": "^2.2.2",
		"glob": "^10.3.4",
		"husky": "^8.0.3",
		"kleur": "^4.1.5",
		"lint-staged": "^14.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.29",
		"postcss-100vh-fix": "^1.0.2",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"tailwindcss": "^3.3.3",
		"tailwindcss-padding-safe": "^1.0.6",
		"typescript": "5.2.2"
	},
	"lint-staged": {
		"*.+(js|jsx|ts|tsx|cts|mts)": [
			"eslint --cache --fix"
		],
		"*": [
			"prettier --write --ignore-unknown"
		]
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
