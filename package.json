{
  "private": true,
  "repository": "https://github.com/mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s clean type-check && remix build",
    "clean": "./scripts/clean.js",
    "dev": "remix dev -c 'node --require dotenv/config --watch ./server.js'",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --fix .",
    "format": "prettier --ignore-path .gitignore --ignore-unknown --write .",
    "validate": "run-p lint format type-check",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@mcansh/remix-fastify": "^2.7.2",
    "@mcansh/remix-secure-headers": "^0.7.1",
    "@remix-run/node": "1.16.0-pre.3",
    "@remix-run/react": "1.16.0-pre.3",
    "@remix-run/server-runtime": "1.16.0-pre.3",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "fastify": "^4.17.0",
    "fathom-client": "^3.5.0",
    "glob": "^10.2.2",
    "is-ci": "^3.0.1",
    "isbot": "^3.6.10",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.16.0-pre.3",
    "@remix-run/eslint-config": "1.16.0-pre.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript/lib-dom": "npm:@types/web@^0.0.99",
    "autoprefixer": "^10.4.14",
    "del": "^7.0.0",
    "eslint": "^8.39.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "gitignore-fs": "^2.2.2",
    "husky": "^8.0.3",
    "kleur": "^4.1.5",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-100vh-fix": "^1.0.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "tailwindcss": "3.3.2",
    "tailwindcss-padding-safe": "^1.0.6",
    "typescript": "5.1.0-beta"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --cache --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
