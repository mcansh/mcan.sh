{
  "name": "mcansh",
  "description": "personal website for logan mcansh",
  "version": "2.0.0",
  "repository": "mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "clean": "del .cache app/styles server/build public/build",
    "prebuild": "run-s clean type-check",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "start": "vercel dev",
    "type-check": "tsc --project app",
    "lint": "eslint . --ext \".js,.ts,.tsx\" --fix",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "validate": "run-p lint format type-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/node": "0.17.0",
    "@remix-run/react": "0.17.0",
    "@remix-run/vercel": "0.17.0",
    "fathom-client": "3.0.0",
    "framer-motion": "4.1.13",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "0.17.0",
    "remix-utils": "1.0.2",
    "type-fest": "1.1.1"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.0.1",
    "@remix-run/dev": "0.17.0",
    "@types/node": "15.0.2",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.4",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "autoprefixer": "10.2.5",
    "cssnano": "5.0.2",
    "del-cli": "3.0.1",
    "eslint": "7.26.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "pm2": "4.5.6",
    "postcss": "8.2.15",
    "postcss-cli": "8.3.1",
    "prettier": "2.3.0",
    "tailwindcss": "2.1.2",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
