    "@remix-run/node": "2.7.2",
    "@remix-run/react": "2.7.2",
    "@unpic/react": "^0.1.11",
    "cloudinary-build-url": "^0.2.4",
    "clsx": "^2.1.0",
    "cross-env": "^7.0.3",
    "fastify": "^4.26.1",
    "fathom-client": "^3.6.0",
    "is-ci": "^3.0.1",
    "isbot": "^5.1.1",
    "pretty-cache-header": "^1.0.0",
    "react": "18.3.0-canary-5c607369c-20240116",
    "react-dom": "18.3.0-canary-5c607369c-20240116",
    "remix-utils": "7.5.0",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
