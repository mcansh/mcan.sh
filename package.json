{
  "private": true,
  "repository": "https://github.com/mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "run-s clean type-check && remix build",
    "clean": "./scripts/clean.mjs",
    "dev": "npm-run-all clean --parallel dev:*",
    "dev:remix": "remix dev",
    "dev:server": "cross-env NODE_ENV=development node --require dotenv/config --watch ./server.js",
    "start": "node ./server.js",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --fix .",
    "format": "prettier --ignore-path .gitignore --ignore-unknown --write .",
    "validate": "run-p lint format type-check",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@mcansh/remix-fastify": "^2.6.3",
    "@mcansh/remix-secure-headers": "^0.6.2",
    "@remix-run/node": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "clsx": "^1.2.1",
    "fastify": "^4.15.0",
    "fathom-client": "^3.5.0",
    "glob": "^9.3.1",
    "is-ci": "^3.0.1",
    "isbot": "^3.6.7",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.0.0",
    "type-fest": "^3.6.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.14.3",
    "@remix-run/eslint-config": "^1.14.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript/lib-dom": "npm:@types/web@^0.0.99",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "del": "^7.0.0",
    "eslint": "^8.36.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "gitignore-fs": "^2.2.2",
    "husky": "^8.0.3",
    "kleur": "^4.1.5",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-100vh-fix": "^1.0.2",
    "prettier": "^2.8.6",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "tailwindcss": "^3.2.7",
    "tailwindcss-padding-safe": "^1.0.6",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --cache --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
