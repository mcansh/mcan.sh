{
  "private": true,
  "repository": "https://github.com/mcansh/mcan.sh",
  "homepage": "https://mcan.sh",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "./scripts/clean.mjs",
    "dev": "npm run clean && run-p dev:*",
    "dev:css": "npm run css -- --watch",
    "dev:remix": "remix dev",
    "build": "run-s clean type-check && run-s build:*",
    "build:css": "npm run css -- --minify",
    "build:remix": "remix build --sourcemap && node ./scripts/postbuild.mjs",
    "css": "tailwindcss -o app/styles/app.css --postcss",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --fix .",
    "format": "prettier --ignore-path .gitignore --write .",
    "validate": "run-p lint format type-check",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@mcansh/remix-secure-headers": "^0.6.2",
    "@remix-run/node": "1.13.0-pre.2",
    "@remix-run/react": "1.13.0-pre.2",
    "@remix-run/vercel": "1.13.0-pre.2",
    "@sentry/remix": "^7.37.1",
    "@vercel/node": "^2.9.2",
    "clsx": "^1.2.1",
    "etag": "^1.8.1",
    "fathom-client": "^3.5.0",
    "is-ci": "^3.0.1",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "type-fest": "^3.5.7"
  },
  "devDependencies": {
    "@remix-run/dev": "1.13.0-pre.2",
    "@remix-run/eslint-config": "1.13.0-pre.2",
    "@remix-run/serve": "1.13.0-pre.2",
    "@sentry/cli": "^2.12.0",
    "@sindresorhus/slugify": "^2.2.0",
    "@types/etag": "^1.8.1",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript/lib-dom": "npm:@types/web@^0.0.91",
    "autoprefixer": "^10.4.13",
    "del": "^7.0.0",
    "eslint": "^8.33.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "gitignore-fs": "^2.2.2",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "kleur": "^4.1.5",
    "lint-staged": "^13.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-100vh-fix": "^1.0.2",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "replace-in-file": "^6.3.5",
    "tailwindcss": "^3.2.6",
    "tailwindcss-padding-safe": "^1.0.6",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|cts|mts)": [
      "eslint --fix"
    ]
  }
}
