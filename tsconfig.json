{
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/.server/**/*.ts",
		"**/.server/**/*.tsx",
		"**/.client/**/*.ts",
		"**/.client/**/*.tsx"
	],
	"compilerOptions": {
		/* base options */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": { "~/*": ["./app/*"] },
		"types": [
			"@react-router/node",
			"vite/client",
			"react/canary",
			"react-dom/canary",
			"@mcansh/vite-svg-sprite-plugin/client"
		],

		/* strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noFallthroughCasesInSwitch": true,

		/* transpiling */
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"isolatedModules": true,

		/* where our code runs */
		"lib": ["DOM", "DOM.Iterable", "ES2022"]
	}
}
